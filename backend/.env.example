# Server
PORT=5000
NODE_ENV=development

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/jshs_logistics

# Auth
JWT_SECRET=your_jwt_secret_here

# Frontend dev origin
CORS_ORIGIN=http://localhost:5173

# Gmail SMTP Configuration (CRITICAL for OTP & Invoices)
# Use a Gmail App Password
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-character-app-password
SMTP_FROM="JSHS Logistics" <no-reply@yourdomain.com>

# Razorpay Integration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Twilio (Optional, mobile OTP eradicated but service kept)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_phone

# Google Maps Platform (Required for location autocomplete)
GOOGLE_MAPS_API_KEY=your_actual_api_key_here

# Simulation Settings
SPEED_LIMIT_KMPH=80
HARSH_TURN_DEG=45
HARSH_TURN_WINDOW_SEC=2
IDLE_WINDOW_SEC=300
DRIVER_EVENT_COOLDOWN_SEC=60
